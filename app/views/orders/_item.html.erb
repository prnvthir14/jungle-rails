
<% @order_items.each do |order_item| %>
<tr>
 <td>
   <%= image_tag order_item.product.image.tiny %>
 </td>
 <td>
   <h4><%= order_item.product.name %></h4>
   <br>
   <p><%= order_item.product.description %></p>
 </td>
 <td>
   <%= order_item.quantity %>
 </td>
 <td>
   <%= humanized_money_with_symbol order_item.product.price * order_item.quantity %>
 </td>
</tr>
<% end %>
 

